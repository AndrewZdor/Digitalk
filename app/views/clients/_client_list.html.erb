                  :loading =>"$('#ajax-indicator').show();" ,
                  :complete =>"$('#ajax-indicator').hide();"%>
					 <%else%>
						<%=client.name%>
					<%end%>
<br />
<%end%>
<%else%>
no clients found
<%end%>