<%form_remote_for(@user,:loading =>"$('#ajax-indicator').show();" ,:complete =>"$('#ajax-indicator').hide();") do |f| -%>
 <fieldset style="height:100px;">
  <legend>Action</legend>
  <table height='100' style="margin-left:150px;text-align:center;">
    <tr> 
        <td width='50'><%if authorise_to_add_or_edit%><%=link_to_remote "New",:url => { :action => "load_user_form"},
                                                                            :loading =>"$('#ajax-indicator').show();" ,
                                                                            :complete =>"$('#ajax-indicator').hide();"%><%else%>New<%end%></td>
        <td width='50'><%= link_to_remote "Cancel" ,:url=>{:action=>"cancel"},
                                                                            :loading =>"$('#ajax-indicator').show();" ,
                                                                            :complete =>"$('#ajax-indicator').hide();"%></td>
        <td width='50'>Copy</td>
        <td width='50'>Import</td>
    </tr>
    <tr> 
        <td width='50'><%if authorise_to_add_or_edit %><%=submit_tag 'Save',:style=>"border:none;background:white;"%><%else%>Save<%end%></td>
        <td width='50'><%if(authorized_user('admin',@user) and @user_action == 'edit')%>
				    <%=link_to_remote 'Delete', :url  =>{:action=>'destroy' ,:id=>@user.id}, :method => :delete, :confirm => 'Are you sure?',
                                                                            :loading =>"$('#ajax-indicator').show();" ,
                                                                            :complete =>"$('#ajax-indicator').hide();"%>
				   <%else%>Delete<%end%>
	</td>
        <td width='50'>&nbsp;</td>
        <td width='50'>Export</td>
    </tr>
  </table>
</fieldset>
<fieldset style="border:none;padding:0px;margin:0px;">
<fieldset>
  <legend>User Information</legend>
	  <div style="height:350px;overflow:auto;" id="user_information_form">
		<%if authorise_to_add_or_edit%>
		  <%=render:partial=>'user_new',:locals=>{:f=>f}%>
		<%end%>
	   </div>
</fieldset>   
 <%= render :partial =>'assignment_list'%> 
</fieldset>
<%end -%>