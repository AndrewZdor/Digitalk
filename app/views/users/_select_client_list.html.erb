<% if !@clients.blank?%>
<%@clients.each do |client|%>
  
	<% if authorized_user(role,client)%>
	  
			<% if @user_action == 'new'%>
				<%=check_box_tag "filter_#{role}_clients[]", client.id,false%><%=label_tag client.name%><br />
			<%elsif(@user_action == 'edit')%>
					<%=check_box_tag "filter_#{role}_clients[]", client.id,check_relation(role,client,@user,'client')%><%=label_tag client.name%><br />
			<%end%>
		
    <%end%>

<%end%>
<%else%>
no clients found
<%end%>