<div id="project_errors"></div>
<style>
 #project_fields ul {list-style:none;float:left;margin:0px;padding:0px;}
 #project_fields ul li{height:20px;margin-bottom:5px;}
</style>

<div id="project_fields">
<ul style="width:80px;text-align:right;">
<li><%= label_tag 'name', 'Name' %></li>
<li style="height:100px;"><%= label_tag 'description', 'Description' %></li>
<li><%= label_tag 'state_date', 'Start Date' %></li>
<li><%= label_tag 'end_date', 'End Date' %></li>
<li><%= label_tag 'client_id', 'Client' %></li>
</ul>
<ul style="width:240px;margin-left:10px;">
<li><%= f.text_field :title,:size=>'20'%></li>
<li style="height:100px;"><%= f.text_area :description,:rows=>5,:cols=>24 %></li>
<li><%= f.date_select :start_date %></li>
<li><%= f.date_select :end_date %></li>
<li><%=select(:project,:client_id,@owned_clients.map{|c| [c.name,c.id]})%></li>
</ul>
 </div>