<%form_remote_for(@project ,:loading =>"$('#ajax-indicator').show();" ,:complete =>"$('#ajax-indicator').hide();")do |f| -%>
<fieldset style="height:100px;">
  <legend>Action</legend>
  <table height='100' style="margin-left:50px;text-align:center;">
    <tr> 
        <td width='80'><%if authorise_to_add_or_edit %><%=link_to_remote "New",:url => { :action => "load_project_form"},
                                                                            :loading =>"$('#ajax-indicator').show();" ,
                                                                            :complete =>"$('#ajax-indicator').hide();"%><%else%>New<%end%></td>
        <td width='80'><%=	 link_to_remote "Cancel" ,:url=>{:action=>"cancel"},
                                  :loading =>"$('#ajax-indicator').show();" ,
                                  :complete =>"$('#ajax-indicator').hide();"%></td>
        <td width='80'>Copy</td>
    </tr>
    <tr> 
        <td width='80'><%if authorise_to_add_or_edit %><%=submit_tag 'Save',:style=>"border:none;background:white;"%><%else%>Save<%end%></td>
        <td width='80'><%if(authorized_user('admin',@project) and @user_action == 'edit')%>
				    <%=link_to_remote 'Delete', :url  =>{:action=>'destroy' ,:id=>@project.id}, :method => :delete, :confirm => 'Are you sure?',
                 :loading =>"$('#ajax-indicator').show();" ,
                 :complete =>"$('#ajax-indicator').hide();"%>
				   <%else%>Delete<%end%></td>
        <td width='80'>&nbsp;</td>
    </tr>
  </table>
</fieldset>
<fieldset style="height:380px;">
  <legend>Project Information</legend>
	  <div id="project_information_form">
		<%=render:partial=>"project_new",:locals=>{:f=>f}%>
	  </div>
</fieldset>
<%end -%>