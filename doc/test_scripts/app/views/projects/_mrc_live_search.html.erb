<fieldset style="height:1000px;">
<legend>MRC List</legend>
 <input type="text" name="live_search" id="live_search" value="search mrcs..."/>
 <%= observe_field(:live_search,
                 :frequency => 0.5,
                 :with => 'q',
                 :url => { :action => :live_search}) %>
<script>
  $('#live_search').focus(function () {
	if($(this).val()=="search mrcs..."){
               $(this).val("");
            }

	});
</script>
 <div id="mrc_list">
 <%=render:partial=>'mrc_list'%>
 </div>
 
 </fieldset>