<% if !@projects.blank?%>
<%@projects.each do |pr|%>
  
	<% if authorized_user(role,pr)%>
	  
			<% if @user_action == 'new'%>
				<%=check_box_tag "filter_#{role}_projects[]", pr.id,false%><%=label_tag pr.title%>
			<%else%>
					<%=check_box_tag "filter_#{role}_projects[]", pr.id,check_relation(pr,role)%><%=label_tag pr.title%>
			<%end%>
		
    <%end%>
<br />
<%end%>
<%else%>
no projects found
<%end%>